{
  "env": {
    "commonjs": true,
    "amd": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "camelcase": 2,
    "curly": [2, "multi-line", "consistent"],
    "indent": [2, 2],
    "max-len": [2, 80],
    "no-inline-comments": 2,
    "no-multi-spaces": 2,
    "no-multiple-empty-lines": [2, { "max": 1 }],
    "no-nested-ternary": 2,
    "no-trailing-spaces": 2,
    "no-unneeded-ternary": 2,
    "quotes": [2, "single"],
    "semi": 2,
    "semi-spacing": 2,
    "spaced-comment": [2, "always", {
      "block": {
        "markers":  ["!"]
      }
    }],
    "wrap-iife": 2
  }
}
